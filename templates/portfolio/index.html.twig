{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block style %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/semantic.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/background.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/home.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/navbar.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/about.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/projets.css') }}">
{% endblock %}

{% block body %}
    <div class="ui grid content grid_home_navbar">
        <div class="sixteen wide column home_section" style="display: none;">
            {% include './portfolio/section/home.html.twig' %}
        </div>
        <div class="sixteen wide column navbar_section">

            {% include './portfolio/section/navbar.html.twig' %}
        </div>
    </div>
    <div class="ui grid content" id="context">
        {% include './portfolio/section/social.html.twig' %}
        <div class="sixteen wide middle aligned column about_section" style="background-color: rgba(0,0,0,0.14)">
            {% include './portfolio/section/about.html.twig' %}
        </div>
        <div class="sixteen wide column projet_section">
            {% include './portfolio/section/project.html.twig' %}
        </div>
        <div class="sixteen wide column skills_section" style="background-color: blue">
            {% include './portfolio/section/skills.html.twig' %}
        </div>
        <div class="sixteen wide column contact_section" style="background-color: pink">
            {% include './portfolio/section/contact.html.twig' %}
        </div>
    </div>
{% endblock %}

    {% block javascripts %}
        <script src="http://cdn.jsdelivr.net/jquery.glide/1.0.6/jquery.glide.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <script src="{{ asset('build/js/background.js') }}"></script>
        <script src="{{ asset('build/js/home.js') }}"></script>
        <script src="{{ asset('build/js/navbar.js') }}"></script>
        <script src="{{ asset('build/js/about.js') }}"></script>
        <script src="{{ asset('build/js/projets.js') }}"></script>
    {% endblock %}
